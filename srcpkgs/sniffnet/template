# Template file for 'sniffnet'
pkgname=sniffnet
version=1.4.1
revision=1
archs="x86_64"
build_style=cargo
makedepends="pkg-config libpcap-devel alsa-lib-devel fontconfig-devel gtk+3-devel"
depends="libpcap alsa-lib fontconfig gtk+3 glibc xdg-desktop-portal zenity freetype"
short_desc="Application to comfortably monitor your network traffic"
maintainer="nerdyslacker <karyan40024@gmail.com>"
license="Apache-2.0, MIT"
homepage="https://github.com/GyulyVGC/sniffnet"
distfiles="https://github.com/GyulyVGC/sniffnet/archive/refs/tags/v${version}.tar.gz"
checksum=920ad7aae75af8bdeed501eb726e9b97d0c07b077d29c2a4033b7ad7c45d9b4d

post_install() {
	vinstall README.md 644 usr/share/doc/${pkgname}
	vinstall resources/logos/raw/icon.png 644 usr/share/pixmaps ${pkgname}.png
	vinstall resources/packaging/linux/${pkgname}.desktop 644 usr/share/applications
	vlicense ${FILESDIR}/LICENSE
}