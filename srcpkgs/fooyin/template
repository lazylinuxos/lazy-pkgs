pre_configure() {
    # Patch needed line before build
    find src -type f -print0 | xargs -0 sed -i 's/opt.backgroundBrush = {};/opt.backgroundBrush = Qt::NoBrush;/g'
}

post_install() {
    vlicense COPYING
}