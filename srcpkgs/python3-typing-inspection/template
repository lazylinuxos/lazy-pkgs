post_check() {
    local _site_packages=$(python3 -c "import site; print(site.getsitepackages()[0])")
    PYTHONPATH="$PWD/tmp_install/$_site_packages:$PYTHONPATH:$PWD/tests" pytest -vv -k 'not test_mysql'
}
